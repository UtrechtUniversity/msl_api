<https://www.epos-eu.org/multi-scale-laboratories/WebService/014/Operation/014> a hydra:Operation;
		hydra:method "GET"^^xsd:string;
		hydra:returns "application/json";
		hydra:property[ a hydra:IriTemplate;
			hydra:template "https://epos-msl.uu.nl/webservice/api/facilities{?facilityQuery, equipmentQuery, rows}"^^xsd:string;				
                hydra:mapping[ a hydra:IriTemplateMapping;
					hydra:variable "facilityQuery"^^xsd:string;
					rdfs:range "xsd:string";
					rdfs:label "Search laboratories";
					#schema:defaultValue "";
					hydra:required "false"^^xsd:boolean;
				];
				hydra:mapping[ a hydra:IriTemplateMapping;
					hydra:variable "equipmentQuery"^^xsd:string;
					rdfs:range "xsd:string";
					rdfs:label "Search equipment";
					#schema:defaultValue "";
					hydra:required "false"^^xsd:boolean;
				];				
				hydra:mapping[ a hydra:IriTemplateMapping;
					hydra:variable "rows"^^xsd:string;
					rdfs:range "xsd:integer";
					rdfs:label "Search results (number)";
					schema:defaultValue "250";
					http:paramValue "250";
					http:paramValue "100";
					http:paramValue "50";
					http:paramValue "10";
					hydra:required "false"^^xsd:boolean;
				];
		] ;	